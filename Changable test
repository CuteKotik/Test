local NPCSpawns = workspace.NPCSpawns
local BossSpawns = NPCSpawns:GetChildren()

for _, spawn in ipairs(BossSpawns) do
    if spawn:IsA("MeshPart") and spawn.Name == "BossSpawn" then
        local boss = spawn:FindFirstChild(spawn.Name)
        if boss then
            local gui = Instance.new("ScreenGui")
            local frame = Instance.new("Frame")
            local label = Instance.new("TextLabel")
            
            gui.Parent = game.Players.LocalPlayer.PlayerGui
            
            frame.Size = UDim2.new(0, 100, 0, 50)
            frame.Position = UDim2.new(0.5, -50, 0.1, 0)
            frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
            frame.BackgroundTransparency = 0.5
            frame.Parent = gui
            
            label.Size = UDim2.new(1, 0, 1, 0)
            label.BackgroundTransparency = 1
            label.Text = boss.Name
            label.TextColor3 = Color3.fromRGB(255, 255, 255)
            label.Parent = frame
            
            local dragToggle = nil
            local dragInput = nil
            local dragStart = nil
            local startPos = nil

            frame.InputBegan:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then
                    dragToggle = true
                    dragStart = input.Position
                    startPos = frame.Position
                    input.Changed:Connect(function()
                        if input.UserInputState == Enum.UserInputState.End then
                            dragToggle = false
                        end
                    end)
                end
            end)

            frame.InputChanged:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseMovement then
                    dragInput = input
                end
            end)

            game:GetService("UserInputService").InputChanged:Connect(function(input)
                if input == dragInput and dragToggle then
                    local delta = input.Position - dragStart
                    frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
                end
            end)
        end
    end
end
